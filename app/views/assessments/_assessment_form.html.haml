- unless @assessment.errors.empty?
  %div.alert.alert-danger
    Errors prevented this course from being #{controller.action_name}d:
    %ul
      - @assessment.errors.full_messages.each do |error|
        %li= error

%div.form-group
  = label :assessment, :name, 'Name'
  = text_field :assessment, 'name'

%div.form-group
  = label :assessment, :weight, 'Weight'
  = number_field :assessment, 'weight', :in => 0..1, :step => 0.01